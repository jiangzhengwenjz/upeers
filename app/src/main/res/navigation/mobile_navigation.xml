<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.upeers.ui.home.HomeFragment"
        android:label="@string/title_1_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_message"
        android:name="com.example.upeers.ui.message.MessageFragment"
        android:label="@string/title_2_message"
        tools:layout="@layout/fragment_message(unused)" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.upeers.ui.account.AccountFragment"
        android:label="@string/title_3_account"
        tools:layout="@layout/fragment_account" />
</navigation>
